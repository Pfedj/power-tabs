{
    "manifest_version": 2,
    "name": "Power Tabs",
    "version": "1.2.0",
    "homepage_url": "https://github.com/Rapptz/power-tabs",
    "description": "Vertical tab groups with tab searching",
    "applications": {
        "gecko": {
            "id": "power-tabs@rapptz-addons.com",
            "strict_min_version": "57.0"
        }
    },

    "permissions": [
        "<all_urls>",
        "activeTab",
        "tabs",
        "storage",
        "sessions",
        "webRequestBlocking",
        "webRequest",
        "history"
    ],

    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+Comma"
            },
            "description": "Opens the Power Tab menu."
        }
    },

    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },

    "background": {
        "scripts": ["background/listen.js"]
    },

    "options_ui": {
        "page": "options/options.html"
    },

    "sidebar_action": {
        "default_title": "Power Tabs",
        "default_panel": "sidebar/main.html",
        "default_icon": "icons/icon.svg",
        "browser_style": true
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/icon.svg",
        "default_title": "Power Tabs"
    },

    "web_accessible_resources": [
        "background/confirm.html"
    ]
}
